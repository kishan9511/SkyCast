<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - SkyCast.WebSystem</title>

	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/SkyCast.WebSystem.styles.css" asp-append-version="true" />

	<!-- CSS FILES -->
	<link rel="preconnect" href="https://fonts.googleapis.com">

	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

	<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600;700&family=Open+Sans&display=swap" rel="stylesheet">

	<link href="~/LandingPage/css/bootstrap.min.css" rel="stylesheet">

	<link href="~/LandingPage/css/bootstrap-icons.css" rel="stylesheet">

	<link href="~/LandingPage/css/templatemo-topic-listing.css" rel="stylesheet">
	 
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

	<link href="~/css/skycast.css" rel="stylesheet" />
</head>

<body id="top">

	<main>

		<nav class="navbar navbar-expand-lg">
			<div class="container">
				<a class="navbar-brand" href="#">
					<i class="bi-back"></i>
					<span>SkyCast</span>
				</a>

				<div class="d-lg-none ms-auto me-4">
					<a href="#top" class="navbar-icon bi-person smoothscroll"></a>
				</div>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav ms-lg-5 me-lg-auto">
						@* <li class="nav-item">
							<a class="nav-link click-scroll" href="#section_1">Home</a>
						</li> *@

					 
					</ul>
					<div class="d-none d-lg-block">
						<a href="#top" class="bi-cloud-sun"></a>
					</div>
				</div>
			</div>
		</nav>



		@RenderBody()


	</main>


	<footer class="site-footer section-padding">
		<div class="container">
			<div class="row">

				<div class="col-lg-3 col-12 mb-4 pb-2">
					<a class="navbar-brand mb-2" href="#">
						<i class="bi-back"></i>
						<span>SkyCast</span>
					</a>
				</div>

				 

				<div class="col-lg-3 col-md-4 col-12 mt-4 mt-lg-0 ms-auto">
					<p class="copyright-text mt-lg-5 mt-4">
						Copyright © 2048 SkyCast Listing Center. All rights reserved.
						 
					</p>

				</div>

			</div>
		</div>
	</footer>


	<!-- JAVASCRIPT FILES -->
	<script src="~/LandingPage/js/jquery.min.js"></script>
	<script src="~/LandingPage/js/bootstrap.bundle.min.js"></script>
	<script src="~/LandingPage/js/jquery.sticky.js"></script>
	@* <script src="~/LandingPage/js/click-scroll.js"></script> *@
	<script src="~/LandingPage/js/custom.js"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
